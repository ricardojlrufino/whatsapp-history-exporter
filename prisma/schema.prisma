// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Message {
  messageId String   @unique // ID original da mensagem do WhatsApp
  timestamp DateTime
  chatId    String
  type      String
  fromMe    Boolean  @default(false)
  text      String?  @db.Text
  hasMedia  Boolean  @default(false)
  @@index([chatId])
  @@index([timestamp])
}

